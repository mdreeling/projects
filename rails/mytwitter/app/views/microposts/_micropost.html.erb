	data-tweet-id="288098988383666176"

	data-item-id="288098988383666176"

	data-screen-name="waaf" data-name="WAAF" data-user-id="17789365"

	data-card-type="summary"

	data-expanded-footer=""

	>

		<i class="dogear"></i>
